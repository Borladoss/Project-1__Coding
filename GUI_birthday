import tkinter as tk
from tkinter import messagebox
from datetime import datetime

def calculate_age():
    birthdate = entry_birthdate.get().strip()
    try:
        birth_date = datetime.strptime(birthdate, "%Y-%m-%d")
        today = datetime.today()
        age = today.year - birth_date.year - ((today.month, today.day) < (birth_date.month, birth_date.day))
        lbl_result.config(text=f"à¸„à¸¸à¸“à¸¡à¸µà¸­à¸²à¸¢à¸¸ {age} à¸›à¸µ", fg="green")
    except ValueError:
        messagebox.showerror("à¸‚à¹‰à¸­à¸œà¸´à¸”à¸à¸¥à¸²à¸”", "à¸à¸£à¸¸à¸“à¸²à¸à¸£à¸­à¸à¸§à¸±à¸™à¹€à¸”à¸·à¸­à¸™à¸›à¸µà¹€à¸à¸´à¸”à¹ƒà¸«à¹‰à¸–à¸¹à¸à¸•à¹‰à¸­à¸‡à¹ƒà¸™à¸£à¸¹à¸›à¹à¸šà¸š YYYY-MM-DD")

# à¸ªà¸£à¹‰à¸²à¸‡à¸«à¸™à¹‰à¸²à¸•à¹ˆà¸²à¸‡à¸«à¸¥à¸±à¸
root = tk.Tk()
root.title("à¹‚à¸›à¸£à¹à¸à¸£à¸¡à¸„à¸³à¸™à¸§à¸“à¸­à¸²à¸¢à¸¸")
root.geometry("400x250")
root.resizable(False, False)
root.configure(bg="#F0F8FF")  # à¸à¸·à¹‰à¸™à¸«à¸¥à¸±à¸‡à¸ªà¸µà¸Ÿà¹‰à¸²à¸­à¹ˆà¸­à¸™

# à¸ªà¹ˆà¸§à¸™à¸«à¸±à¸§à¸‚à¸­à¸‡à¹‚à¸›à¸£à¹à¸à¸£à¸¡
lbl_title = tk.Label(root, text="ğŸ‚ à¹‚à¸›à¸£à¹à¸à¸£à¸¡à¸„à¸³à¸™à¸§à¸“à¸­à¸²à¸¢à¸¸ ğŸ‚", font=("TH Sarabun New", 20, "bold"), bg="#F0F8FF", fg="#333")
lbl_title.pack(pady=10)

# à¸Šà¹ˆà¸­à¸‡à¸à¸£à¸­à¸à¸‚à¹‰à¸­à¸¡à¸¹à¸¥
frame_input = tk.Frame(root, bg="#F0F8FF")
frame_input.pack(pady=10)

lbl_birthdate = tk.Label(frame_input, text="à¸§à¸±à¸™à¹€à¸à¸´à¸”à¸‚à¸­à¸‡à¸„à¸¸à¸“ (YYYY-MM-DD):", font=("TH Sarabun New", 14), bg="#F0F8FF")
lbl_birthdate.pack(side="left", padx=5)

entry_birthdate = tk.Entry(frame_input, font=("TH Sarabun New", 14), width=15)
entry_birthdate.pack(side="left")

# à¸›à¸¸à¹ˆà¸¡à¸„à¸³à¸™à¸§à¸“
btn_calculate = tk.Button(root, text="à¸„à¸³à¸™à¸§à¸“à¸­à¸²à¸¢à¸¸", font=("TH Sarabun New", 14, "bold"), bg="#28a745", fg="white", command=calculate_age)
btn_calculate.pack(pady=10)

# à¹à¸ªà¸”à¸‡à¸œà¸¥à¸¥à¸±à¸à¸˜à¹Œ
lbl_result = tk.Label(root, text="", font=("TH Sarabun New", 16, "bold"), bg="#F0F8FF")
lbl_result.pack()

# à¹€à¸£à¸´à¹ˆà¸¡à¸•à¹‰à¸™ GUI
root.mainloop()
